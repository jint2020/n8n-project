# n8n环境变量配置文件
# 复制此文件为 .env 并根据需要修改配置

# ========== 基本服务配置 ==========
# 时区设置
GENERIC_TIMEZONE=Asia/Shanghai
TZ=Asia/Shanghai

# 端口映射
N8N_PORT=5678
POSTGRES_PORT=5432

# ========== n8n基本配置 ==========
N8N_ENFORCE_SETTINGS_FILE_PERMISSIONS=true
N8N_RUNNERS_ENABLED=true

# ========== PostgreSQL数据库配置 ==========
POSTGRES_DB=n8n
POSTGRES_USER=n8n
POSTGRES_PASSWORD=n8n_secure_password

# ========== 安全配置 ==========
# 加密密钥（请务必更改为您自己的随机密钥）
N8N_ENCRYPTION_KEY=your-secure-encryption-key-change-this-to-random-string

# ========== 基本认证配置 ==========
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=secure_admin_password

# ========== Webhook配置 ==========
# Webhook URL（如果需要外部访问，请设置您的域名）
# WEBHOOK_URL=https://your-domain.com/

# ========== 监控和日志配置 ==========
N8N_METRICS=false
N8N_LOG_LEVEL=info
